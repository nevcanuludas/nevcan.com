mixin career-item(datetime, date, title, location, desc, isVisible)
  li(class!=attributes.class v-show=isVisible)
    .career-list__date
      time(datetime=datetime)= date
    .career-list__title= title
    .career-list__location= location
    .career-list__desc= desc

section#career-list

  h4.section-heading 
    template(v-if= "$t('selectedLang') == 'tr'")
      | Kariyer:

    template(v-if= "$t('selectedLang') == 'en'")
      | Career:

  .career-filter
    template(v-if= "$t('selectedLang') == 'tr'")
      .btn-group(role="group" aria-label="Career Filter")
        button(type="button" aria-label='Tümü' @click="showAll" :class="{'active': isActiveTab == 'all'}").btn.btn-sm.btn-secondary Tümü
        button(type="button" aria-label='Dalış Merkezleri' @click="showCenters" :class="{'active': isActiveTab == 'divecenter'}").btn.btn-sm.btn-secondary Dalış Merkezleri
        button(type="button" aria-label='Kilometre Taşları' @click="showMileStones" :class="{'active': isActiveTab == 'milestone'}").btn.btn-sm.btn-secondary Kilometre Taşları

    template(v-if= "$t('selectedLang') == 'en'")
      .btn-group(role="group" aria-label="Career Filter")
        button(type="button" aria-label='All' @click="showAll" :class="{'active': isActiveTab == 'all'}").btn.btn-sm.btn-secondary All
        button(type="button" aria-label='Dive Centers' @click="showCenters" :class="{'active': isActiveTab == 'divecenter'}").btn.btn-sm.btn-secondary Dive Centers
        button(type="button" aria-label='Mile Stones' @click="showMileStones" :class="{'active': isActiveTab == 'milestone'}").btn.btn-sm.btn-secondary Mile Stones

