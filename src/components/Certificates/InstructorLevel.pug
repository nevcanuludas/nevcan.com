mixin skill-list-horizontal-item(company, level, isVisible)
  li(v-if= isVisible)
    .skill-list-horizontal__bar(class!=attributes.class style!=attributes.style)
      block
      strong= company
      span.pull-right= level

//- Mixin Ends

section

  h4.section-heading
    template(v-if= "$t('selectedLang') == 'tr'")
      | Eğitmenlik Düzeyi:

    template(v-if= "$t('selectedLang') == 'en'")
      | Instructor Level:

  ul.skill-list-horizontal
    template(v-if= "$t('selectedLang') == 'tr'")
      +skill-list-horizontal-item("TSSF/CMAS", "2* Dalış Eğitmeni", '')(style="width: calc(100%*5/6)")
        button.btn.btn-white.p-0.px-2(aria-label='Devamı' @click= 'isTssfVisible = !isTssfVisible')
          i.fa.fa-angle-down
      +skill-list-horizontal-item("TSSF", "Uzman Dalıcı Eğitmeni", 'isTssfVisible')(style="width: calc(100%*17/17)" class="thin")
      +skill-list-horizontal-item("TSSF", "Engelli Dalıcı Eğitmeni", 'isTssfVisible')(style="width: calc(100%*5/6)" class="thin")
      +skill-list-horizontal-item("TSSF", "Sualtı Kültür Mirasının Korunması Eğitmeni", 'isTssfVisible')(style="width: calc(100%*2/2)" class="thin")
      +skill-list-horizontal-item("ProRecTec", "2* Dalış Eğitmeni", '')(style="width: calc(100%*5/6)")
        button.btn.btn-white.p-0.px-2(aria-label='Devamı' @click= 'isProtecVisible = !isProtecVisible')
          i.fa.fa-angle-down
      +skill-list-horizontal-item("ProRecTec", "Uzman Dalıcı Eğitmeni", 'isProtecVisible')(style="width: calc(100%*8/22)" class="thin")
      +skill-list-horizontal-item("ProRecTec", "Engelli Dalıcı Eğitmeni", 'isProtecVisible')(style="width: calc(100%*2/3)" class="thin")
      +skill-list-horizontal-item("ProRecTec", "Serbest Dalış Eğitmeni", 'isProtecVisible')(style="width: calc(100%*4/6)" class="thin")

    template(v-if= "$t('selectedLang') == 'en'")
      +skill-list-horizontal-item("TSSF/CMAS", "2* Scuba Instructor", '')(style="width: calc(100%*5/6)")
        button.btn.btn-white.p-0.px-2(aria-label='More' @click= 'isTssfVisible = !isTssfVisible')
          i.fa.fa-angle-down
      +skill-list-horizontal-item("TSSF", "Speciality Instructor", 'isTssfVisible')(style="width: calc(100%*17/17)" class="thin")
      +skill-list-horizontal-item("TSSF", "Handicap Diver Instructor", 'isTssfVisible')(style="width: calc(100%*5/6)" class="thin")
      +skill-list-horizontal-item("TSSF", "Protection of Underwater Cultural Heritage Instructor", 'isTssfVisible')(style="width: calc(100%*2/2)" class="thin")
      +skill-list-horizontal-item("ProRecTec", "2* Scuba Instructor", '')(style="width: calc(100%*5/6)")
        button.btn.btn-white.p-0.px-2(aria-label='More' @click= 'isProtecVisible = !isProtecVisible')
          i.fa.fa-angle-down
      +skill-list-horizontal-item("ProRecTec", "Speciality Instructor", 'isProtecVisible')(style="width: calc(100%*8/22)" class="thin")
      +skill-list-horizontal-item("ProRecTec", "Handicap Diver Instructor", 'isProtecVisible')(style="width: calc(100%*2/3)" class="thin")
      +skill-list-horizontal-item("ProRecTec", "Freediving Instructor", 'isProtecVisible')(style="width: calc(100%*4/6)" class="thin")
