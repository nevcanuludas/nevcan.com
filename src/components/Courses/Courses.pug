section#courses

  h3.page-heading {{ sectionTitle }}

  .pp

    p.pp-info.alert.alert-info
      | Planlanmış eğitim ve tur tarihleri için
      router-link(to='/scheduled-classes' exact) &nbsp;Etkinlik Takvimi&nbsp;
      | sayfasına bakabilirsiniz.

    .courses-filter
      .btn-group(role="group" aria-label="Career Filter")
        button(type="button" @click="showAllCompanies" :class="{'active': isActiveTab == 'allCompanies'}").btn.btn-sm.btn-secondary Tümü
        button(type="button" @click="showTssf" :class="{'active': isActiveTab == 'tssf'}").btn.btn-sm.btn-secondary TSSF
        button(type="button" @click="showProtec" :class="{'active': isActiveTab == 'protecrec'}").btn.btn-sm.btn-secondary ProRecTec

      .btn-group.float-right(role="group" aria-label="Career Filter")
        button(type="button" @click="showAllCourses" :class="{'active': isActiveFilter == 'allCourses'}").btn.btn-sm.btn-secondary Tümü
        button(type="button" @click="showScuba" :class="{'active': isActiveFilter == 'diver'}").btn.btn-sm.btn-secondary Dalıcı
        button(type="button" @click="showSpecialty" :class="{'active': isActiveFilter == 'specialty'}").btn.btn-sm.btn-secondary Uzmanlık
        button(type="button" @click="showDisabled" :class="{'active': isActiveFilter == 'disabled'}").btn.btn-sm.btn-secondary Engelli
        button(type="button" @click="showFree" :class="{'active': isActiveFilter == 'free'}").btn.btn-sm.btn-secondary Serbest
        button(type="button" @click="showSpecialProgram" :class="{'active': isActiveFilter == 'special'}").btn.btn-sm.btn-secondary Özel Programlar

    .row.courses-list
      template(v-for='course in courses' v-if='course.isVisible && course.isCompanyVisible')
        .col-6.col-sm-4.col-md-6.col-lg-4.col-xl-3
          router-link(:to="'/courses/' + course.id")
            .canvas-overlay(:title= 'course.name')
              .btn
                i.fa.fa-search
            .canvas.upsidedown(:title= 'course.name')
              p {{ course.name }}
              img.img-fluid(:src= "'/static/img/courses-list/' + course.imageUrl + '.jpg'", :alt= 'course.name')

