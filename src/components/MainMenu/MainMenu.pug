          span {{ $t('mainmenu.scheduledClasses') }}
      li(v-on:click= "isActive = !isActive").col-6.col-md-4
        router-link(to='/faq' exact)
          i.fa.fa-question
          span {{ $t('mainmenu.faq') }}
      li(v-on:click= "isActive = !isActive").col-6.col-md-4
