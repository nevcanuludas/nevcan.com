#mainmenu

  .mainmenu-btn(v-on:click= 'toggleMenu')
    i.fa.fa-bars(v-if= '!isActive')
    i.fa.fa-times(v-if= 'isActive')

  nav.mainmenu(v-if= "isActive")

    input#esc(type='text' @keyup.esc='toggleMenu' @keyup.enter='consoleLog' autofocus)

    ul
      li.col-6.col-md-4
        a(v-on:click= "isActive = !isActive", href='/#aboutme')
          i.fa.fa-user
          span {{ $t('mainmenu.aboutMe') }}
      li.col-6.col-md-4
        a(v-on:click= "isActive = !isActive", href='/#certificates')
          i.fa.fa-id-card-o
          span {{ $t('mainmenu.certificates') }}
      li.col-6.col-md-4
        a(v-on:click= "isActive = !isActive", href='/#courses')
          i.fa.fa-book
          span {{ $t('mainmenu.courses') }}
      li.col-6.col-md-4
        a(v-on:click= "isActive = !isActive", href='/#services')
          i.fa.fa-handshake-o
          span {{ $t('mainmenu.services') }}
      li.col-6.col-md-4
        a(v-on:click= "isActive = !isActive", href='/#conservation')
          i.fa.fa-globe
          span {{ $t('mainmenu.conservation') }}
      li.col-6.col-md-4
        a(v-on:click= "isActive = !isActive", href='/#contact')
          i.fa.fa-envelope
          span {{ $t('mainmenu.contact') }}
      //- li(v-on:click= "isActive = !isActive").col-6.col-md-4
