mixin services-list-item(href, src, name)
  .col-6.col-sm-4.col-md-6.col-lg-4.col-xl-3
    .canvas
      a(href=href)
        img.img-fluid(src="../../assets/services/list/" + src, alt=name)
        p= name

section#services

  h3.page-heading {{ sectionTitle }}

  .pp

    .row.services-list
      template(v-for='service in services')
        .col-6.col-sm-4.col-md-6.col-lg-4.col-xl-3
          router-link(:to="'/services/' + service.id")
            .canvas-overlay
              .btn
                i.fa.fa-search
            .canvas.upsidedown(:title= 'service.name')
              p {{ service.name }}
              img.img-fluid(:src= "'/static/img/services-list/' + service.imageUrl + '.jpg'", :alt= 'service.name')
